<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<persistence-unit name="test">
		<properties>
			<property name="datanucleus.ConnectionURL" value="jdbc:h2:./testsssss.h2" />
			<property name="datanucleus.ConnectionDriverName" value="org.h2.Driver" />
			<property name="datanucleus.ConnectionUserName" value="" />
			<property name="datanucleus.ConnectionPassword" value="" />
			<property name="datanucleus.schema.autoCreateTables" value="true" />
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="true" />
			<property name="datanucleus.schema.validateConstraints" value="true" />
		</properties>
	</persistence-unit>
	
	<persistence-unit name="h2_memory">
		<properties>
			<property name="datanucleus.ConnectionURL" value="jdbc:h2:mem:" />
			<property name="datanucleus.ConnectionDriverName" value="org.h2.Driver" />
			<property name="datanucleus.ConnectionUserName" value="" />
			<property name="datanucleus.ConnectionPassword" value="" />
			<property name="datanucleus.schema.autoCreateTables" value="true" />
			<property name="datanucleus.schema.autoCreateAll" value="true" />
			<property name="datanucleus.schema.validateTables" value="true" />
			<property name="datanucleus.schema.validateConstraints" value="true" />
		</properties>
	</persistence-unit>

</persistence>